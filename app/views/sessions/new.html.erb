<!-- app/views/sessions/new.html.erb -->

<h1>Connexion</h1>

<%= form_with(url: sessions_path, method: :post) do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Se connecter" %>
  </div>
<% end %>
